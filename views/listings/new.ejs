<% layout("/layouts/boilerplate")-%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Creat a New Listing</h3>     <!-- novalidate class="needs-validation" these use for form validation to bootstrap -->
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data"> 
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input type="text" name="listing[title]" placeholder="enter title" class="form-control" required /> 
                    
                    <!-- if form fil not good then show this messages -->
                    <div class="valid-feedback">Title Looks good!</div>
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>

                    <!-- if form fil not good then show this messages -->
                    <div class="invalid-feedback">Please Enter Sort Description!</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-lable">Image</label>
                    <input type="file"  name="listing[image]"  class="form-control" >
                    required
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price</label>
                        <input  name="listing[price]" placeholder="enter price" class="form-control" required>

                        <!-- if form fil not good then show this messages -->
                        <div class="invalid-feedback">Please Enter a Valid Price!</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lable">Country</label>
                        <input type="text" name="listing[country]" placeholder="India" class="form-control" required>

                        <!-- if form fil not good then show this messages -->
                        <div class="invalid-feedback">Please Enter a Valid Country!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-lable">Location</label>
                    <input type="text" name="listing[location]" placeholder="Delhi , Mumbai , Panjap.." class="form-control" required>

                    <!-- if form fil not good then show this messages -->
                    <div class="invalid-feedback">Please Enter a Valid Location!</div>
                </div>

                <br><br>
                <button class="btn btn-dark add-btn">Add</button>
                <br><br>
            </form>
        </div>
    </div>
</body>
