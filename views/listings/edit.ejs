<% layout("/layouts/boilerplate")-%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Edit Yur Listing</h3>
            <form method="post" action="/listings/<%=listing._id%>?_method=PUT"  novalidate class="needs-validation" enctype="multipart/form-data">
            
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required>
                
                    <!-- if form fil not good then show this messages -->
                    <div class="valid-feedback">Title Looks good!</div>
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea name="listing[description]" value="" class="form-control" required><%=listing.description%></textarea>

                    <!-- if form fil not good then show this messages -->
                    <div class="invalid-feedback">Please Enter Sort Description!</div>
                </div>
                
                <div class="mb-3">
                    Original Listing Image
                    <img src="<%= originalImageUrl %>" />
                </div>

                <div class="mb-3">
                    <label for="image" class="form-lable">Image</label>
                    <input type="file"  name="listing[image]" class="form-control" >

                    <!-- if form fil not good then show this messages -->
                    <!-- <div class="invalid-feedback">Please Enter valid Image Link!</div> -->
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price</label>
                        <input type="number" name="listing[price]" value="<%=listing.price%>" class="form-control"required>

                        <!-- if form fil not good then show this messages -->
                        <div class="invalid-feedback">Please Enter a Valid Price!</div>
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lable">Country</label>
                        <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control"required>

                        <!-- if form fil not good then show this messages -->
                        <div class="invalid-feedback">Please Enter a Valid Country!</div>
                    </div>
                </div>              

                <div class="mb-3">
                    <label for="location" class="form-lable">Location</label>
                    <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control"required>

                    <!-- if form fil not good then show this messages -->
                    <div class="invalid-feedback">Please Enter a Valid Location!</div>
                </div>
                <br><br>
                <button class="btn btn-dark edit-btn">Edit</button>
                <br><br>
            </form>
        </div>
    </div>
</body>
